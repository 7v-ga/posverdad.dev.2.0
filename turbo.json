{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    "package.json",
    "tsconfig.base.json"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/*/.next/**",
        "packages/*/dist/**"
      ]
    },
    "test": {
      "outputs": []
    },
    "format": {
      "cache": false
    }
  }
}
