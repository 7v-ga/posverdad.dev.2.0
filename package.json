{
  "name": "posverdad",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @posverdad/web dev",
    "dev:api": "pnpm --filter @posverdad/api dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @posverdad/web build",
    "build:api": "pnpm --filter @posverdad/api build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write .",
    "postinstall": "lefthook install"
  },
  "devDependencies": {
    "lefthook": "^2.0.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "turbo": "^2.5.8"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx,json,css,md}": [
      "pnpm -C apps/web exec eslint --max-warnings=0 --report-unused-disable-directives --cache",
      "pnpm -C apps/web exec prettier --write"
    ]
  }
}
