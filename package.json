{
  "name": "posverdad",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @posverdad/web dev",
    "dev:api": "pnpm --filter @posverdad/api dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @posverdad/web build",
    "build:api": "pnpm --filter @posverdad/api build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "turbo": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,css,scss,json}": [
      "prettier --write"
    ]
  }
}
